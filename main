import Foundation

var dinheiroNaCarteira : Double = 0

var produtos: [(String, Double)] = [("Arroz", 12.5), ("Macarrão", 2.0), ("Feijão", 12.5), ("Leite", 12.5), ("Pão", 12.5), ("Açúcar", 12.5), ("Sal", 12.5), ("Sabão em Pó", 12.5), ("Sabonete", 12.5), ("Papel Higienico", 12.5)]

var listaSecundaria: [[(String, Double)]] = []

    print("Olá! Vamos as compras? \nSegue a Lista:\n")
        for produto in produtos {
            print("\(produto.0): \(produto.1)")
}
    print("\nPrimeiramente, me tire uma dúvida")

// Opcao de adicionar ou remover item da lista principal

    dinheiroNaCarteira = getDouble("Qual valor que temos para as compras?")

// subtrair o valor lista princpal - o valor de compra

    let pessoas = getInt("Gostaria de saber quantas pessoas (na familia) vão participar das nossas comprinhas?")


/*
//ler quantidade de itens por pessoa
//adicionar laço de produto/valor para cada pessoa
//criar lista para cada objeto (pessoa)
 */

   
for i in 1...pessoas {
    print("\(i)º Pessoa do grupo")
    var otherItem = true
    while otherItem {
        let item = getString("Deseja adicionar um item? ")
        if item == "sim" {
            let thisItem = getString("Qual o nome deste item?")
            let price = getDouble("Qual o valor deste item: \(thisItem)?")
            listaSecundaria.append([])
            listaSecundaria[i-1].append((thisItem, price))
            print("Item adicionado a lista com sucesso!!!")
        } else {
            otherItem = false
        }
        
    }
    
    print(listaSecundaria)
}

